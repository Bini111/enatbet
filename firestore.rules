rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function hasVerifiedEmail() {
      return isAuthenticated() && request.auth.token.email_verified == true;
    }
    
    // ============================================
    // USERS COLLECTION
    // ============================================
    
    match /users/{userId} {
      // Anyone can read basic user profiles
      allow read: if true;
      
      // Users can create their own profile on signup
      allow create: if isOwner(userId) && 
                      request.resource.data.keys().hasAll(['email', 'createdAt']) &&
                      request.resource.data.role == 'guest'; // Default role
      
      // Users can update their own profile (except role)
      allow update: if isOwner(userId) && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid']);
      
      // Only admins can delete users
      allow delete: if isAdmin();
      
      // Private subcollection for sensitive data
      match /private/{document} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // ============================================
    // LISTINGS COLLECTION
    // ============================================
    
    match /listings/{listingId} {
      // Anyone can read active listings
      allow read: if resource.data.status == 'active' || 
                    isOwner(resource.data.hostId) || 
                    isAdmin();
      
      // Only verified users can create listings
      allow create: if hasVerifiedEmail() && 
                      request.resource.data.hostId == request.auth.uid &&
                      request.resource.data.status == 'pending' &&
                      request.resource.data.keys().hasAll([
                        'title', 'description', 'price', 'currency',
                        'location', 'hostId', 'createdAt', 'status'
                      ]);
      
      // Hosts can update their own listings
      allow update: if isOwner(resource.data.hostId) && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['hostId']) ||
                      isAdmin();
      
      // Hosts can delete their own listings (soft delete by status)
      allow delete: if isOwner(resource.data.hostId) || isAdmin();
      
      // Reviews subcollection
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated() && 
                        request.resource.data.guestId == request.auth.uid &&
                        exists(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)) &&
                        get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.guestId == request.auth.uid &&
                        get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.status == 'completed';
        allow update, delete: if isOwner(resource.data.guestId) || isAdmin();
      }
    }
    
    // ============================================
    // BOOKINGS COLLECTION
    // ============================================
    
    match /bookings/{bookingId} {
      // Guests and hosts can read their own bookings
      allow read: if isOwner(resource.data.guestId) || 
                    isOwner(resource.data.hostId) ||
                    isAdmin();
      
      // Verified users can create bookings
      allow create: if hasVerifiedEmail() && 
                      request.resource.data.guestId == request.auth.uid &&
                      request.resource.data.status == 'pending' &&
                      request.resource.data.keys().hasAll([
                        'listingId', 'guestId', 'hostId', 'checkIn', 
                        'checkOut', 'totalPrice', 'currency', 'status', 'createdAt'
                      ]) &&
                      exists(/databases/$(database)/documents/listings/$(request.resource.data.listingId)) &&
                      request.resource.data.checkIn < request.resource.data.checkOut &&
                      request.resource.data.checkIn.toMillis() > request.time.toMillis();
      
      // Guests can cancel, hosts can update status
      allow update: if (isOwner(resource.data.guestId) && 
                       request.resource.data.status == 'cancelled') ||
                       (isOwner(resource.data.hostId) && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt'])) ||
                       isAdmin();
      
      // No direct deletes (use status instead)
      allow delete: if isAdmin();
    }
    
    // ============================================
    // PAYMENTS COLLECTION (Server-side only)
    // ============================================
    
    match /payments/{paymentId} {
      // Users can read their own payments
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Only server (Admin SDK) can write payments
      allow create, update, delete: if false;
    }
    
    // ============================================
    // MESSAGES COLLECTION
    // ============================================
    
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && 
                    request.auth.uid in resource.data.participants;
      
      allow create: if isAuthenticated() && 
                      request.auth.uid in request.resource.data.participants &&
                      request.resource.data.participants.size() == 2;
      
      allow update: if isAuthenticated() && 
                      request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
                      request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        allow create: if isAuthenticated() && 
                        request.resource.data.senderId == request.auth.uid &&
                        request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        allow update, delete: if isOwner(resource.data.senderId);
      }
    }
    
    // ============================================
    // NOTIFICATIONS COLLECTION
    // ============================================
    
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow update: if isOwner(resource.data.userId) && 
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow create, delete: if false; // Server-side only
    }
    
    // ============================================
    // ADMIN COLLECTIONS
    // ============================================
    
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Block all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
