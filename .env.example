# .env.example
# Environment Variables Template for EnatBet App
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ====================
# Feature Flags
# ====================
# Set to 0 for Expo Go preview mode (uses mocks)
# Set to 1 for dev/production builds (enables native modules)
EXPO_PUBLIC_FEATURE_NATIVE=0

# ====================
# Firebase Configuration
# ====================
# Get these values from Firebase Console > Project Settings
EXPO_PUBLIC_FIREBASE_API_KEY=AIzaSyExample_Replace_With_Your_Actual_Key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-ABCDEFGHIJ

# ====================
# Stripe Configuration
# ====================
# Publishable key (safe to expose in client app)
# Test key: pk_test_... (for development)
# Live key: pk_live_... (for production)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51Example_Replace_With_Your_Key

# ====================
# Map Services
# ====================
# Mapbox Public Token (for static maps and geocoding)
# Get from: https://account.mapbox.com/access-tokens/
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.eyJ1IjoiZXhhbXBsZSIsImEiOiJjbGV4YW1wbGUifQ.example_token

# Google Maps API Key (optional, if using Google Maps)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyExample_Google_Maps_Key

# ====================
# API Configuration
# ====================
# Backend API base URL (if you have a custom backend)
# Development: http://localhost:3000
# Staging: https://staging-api.enatbet.com
# Production: https://api.enatbet.com
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000

# ====================
# App Configuration
# ====================
# App environment (development, staging, production)
EXPO_PUBLIC_APP_ENV=development

# Deep linking scheme
EXPO_PUBLIC_APP_SCHEME=enatbet

# ====================
# Third-Party Services
# ====================
# Sentry DSN (for error tracking)
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Analytics (if using services other than Firebase)
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ====================
# PRIVATE KEYS (DO NOT PREFIX WITH EXPO_PUBLIC_)
# ====================
# These should be stored in EAS Secrets, not in .env
# Add via: eas secret:create --scope project --name SECRET_NAME --value secret_value

# Stripe Secret Key (server-side only)
# STRIPE_SECRET_KEY=sk_test_...

# Firebase Admin SDK (for Cloud Functions)
# FIREBASE_ADMIN_SDK_KEY=...

# ====================
# Development Tools
# ====================
# Enable debug logging
DEBUG=false

# Skip authentication in dev mode (careful!)
SKIP_AUTH=false