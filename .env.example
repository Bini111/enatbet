# DEVELOPMENT TEMPLATE
# 1. Copy to .env.local for local dev
# 2. For staging/prod: use EAS Secrets (eas secret:create)

# Feature Flags
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_FEATURE_NATIVE=1

# Firebase (Client-Safe Keys Only)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Stripe Publishable Key (Client-Safe)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_

# Maps
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=
EXPO_PUBLIC_IOS_MAPS_KEY=
EXPO_PUBLIC_ANDROID_MAPS_KEY=

# EAS Project
EXPO_PUBLIC_EAS_PROJECT_ID=

# API
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000

# Dev Tools
DEBUG=false
SKIP_AUTH=false

# ===== SERVER-SIDE SECRETS (Via EAS) =====
# Stripe Secret Key: eas secret:create --scope project --name STRIPE_SECRET_KEY --value sk_test_...
# Firebase Admin SDK: eas secret:create --scope project --name FIREBASE_ADMIN_SDK_KEY --value {...}
# SendGrid API Key: eas secret:create --scope project --name SENDGRID_API_KEY --value SG...
```
